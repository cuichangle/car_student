.top{
  box-sizing: border-box;
  padding: 40rpx;
  text-align: center;
  background: #eee;
}

.avatar{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.nickname{
  font-size: 40rpx;
  color: #101010;
  font-weight: 600;
  text-align: center;
  margin-top: 16rpx;
}
.list{
  padding: 40rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  border-bottom: 1px solid #ccc;
}